  <!--================Single Product Area =================-->
	<div class="product_image_area">
		<div class="container">
			<div class="row s_product_inner">
				<div class="offset-lg-1 col-lg-4">
					<div class="owl-carousel owl-theme s_Product_carousel">
						<div class="single-prd-item">
							<img class="img-fluid" src="<%= @product.image_url %>" alt="">
						</div>
						<!-- <div class="single-prd-item">
							<img class="img-fluid" src="img/category/s-p1.jpg" alt="">
						</div>
						<div class="single-prd-item">
							<img class="img-fluid" src="img/category/s-p1.jpg" alt="">
						</div> -->
					</div>
				</div>
				<div class="col-lg-6 offset-lg-1">
					<% if flash[:alert] %>
                        <div class="alert alert-danger mt-0">
                            <%= flash[:alert] %>
                        </div>
                    <% end %>

                    <% if flash[:notice] %>
						<div class="alert alert-success mt-0">
							<%= flash[:notice] %>
						</div>
                    <% end %>

					<div class="s_product_text">
						<h3><%= @product.name %></h3>
						<h2>&#8358;<%= @product.price %></h2>
						<ul class="list">
							<li><a class="active" href="#"><span>Category</span> : Household</a></li>
							<li><a href="#"><span>Availibility</span> : <%= @product.availability %></a></li>
						</ul>
						<p><%= @product.description[0...300] %>...</p>
						<div class="product_count">
              <label for="qty">Quantity:</label>
                            <%= form_with(url: "/products/add_cart") do |form| %>
                                <%= form.hidden_field :id, value: @product.id %>
                                <%= form.number_field :qty, class: 'input-text qty', 'size':'2', 'min': 1, value: "1" %>
                                
                                <input type="submit" class="btn form-control rounded text-white" value="Add to Cart" style="width:110px; background-color: #32142D;">
                            <% end %>
    
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--================End Single Product Area =================-->

